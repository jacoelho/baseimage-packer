{
    "builders": [
        {
            "commit": "true",
            "image": "ubuntu:14.04",
            "type": "docker"
        }
    ],
    "post-processors": [
        [
            {
                "repository": "jacoelho/baseimage-{{user `PACKER_IMAGE`}}",
                "tag": "{{user `DATE`}}",
                "type": "docker-tag"
            },
            "docker-push"
        ],
        [
            {
                "repository": "jacoelho/baseimage-{{user `PACKER_IMAGE`}}",
                "tag": "latest",
                "type": "docker-tag"
            },
            "docker-push"
        ]
    ],
    "provisioners": [
        {
            "destination": "/tmp",
            "source": "files/",
            "type": "file"
        },
        {
            "scripts": [
                "scripts/ansible.sh"
            ],
            "type": "shell"
        },
        {
            "inline": [
                "ansible-galaxy install -r /tmp/requirements.yml"
            ],
            "type": "shell"
        },
        {
            "extra_arguments": [
                "--extra-vars @/tmp/{{user `PACKER_IMAGE`}}.yml",
                "-vvvv"
            ],
            "playbook_file": "provision.yml",
            "type": "ansible-local"
        },
        {
            "scripts": [
                "scripts/cleanup.sh"
            ],
            "type": "shell"
        }
    ],
    "variables": {
        "PACKER_IMAGE": "",
        "DATE": "{{isotime \"2006-01-02-1504\"}}"
    }
}
